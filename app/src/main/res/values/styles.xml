<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- استایل ActionBar -->
    <style name="Widget.MyMusicApp.ActionBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/glass_black</item>
        <item name="titleTextStyle">@style/TextAppearance.MyMusicApp.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.MyMusicApp.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/gold</item>
    </style>

    <!-- ThemeOverlay برای BottomNavigation -->
    <style name="ThemeOverlay.MyMusicApp.BottomNavigation.Day" parent="">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.MyMusicApp.BottomNavigation.Night" parent="">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>